<h2><a href="/profile/report/?kind=submit" style="{{submit}}">Submitted for Review</a></h2>
<h2><a href="/profile/report/?kind=progress"style="{{progress}}">In Progress</a></h2>
<h2><a href="/profile/report/?kind=complete"style="{{complete}}">Completed</a></h2>
<h2><a href="/profile/report">Show all</a></h2>
{{submit}}
{{noRecord}}
{{#if result}}
    {{#each result}}
    <label><strong>Date:</strong></label>
    <p>{{this.date}}</p>
    <label><strong>Report Details:</strong></label>
    <table class="table">
        <tr>
            <td>Location</td>
            <td>State: {{this.state}} City/Region: {{this.city}}</td>
        </tr>
        <tr>
            <td>Water Quality Issue</td>
            <td>{{this.title}}</td>
        </tr>
        <tr>
            <td>Issue Details</td>
            <td>{{this.details}}</td>
        </tr>
        <tr>
            <td>Government Progress</td>
            <td>{{this.status}}</td>
        </tr>
        <tr>
            <td>Government Reply</td>
            <td>{{this.reply}}</td>
        </tr>
        {{#if this.reportimg}}
        <tr>
            <td>Report Image</td>
            <td><img src="/img/report/{{this.reportimg}}" alt="reportimg"></td>
        </tr>
        {{/if}}
    </table>
    {{/each}}
{{/if}}


